{
  "private": true,
  "name": "docusaurus-plugin-typedoc-api-root",
  "scripts": {
    "check": "yarn run type && yarn run lint",
    "clean": "rimraf packages/plugin/lib",
    "docs": "yarn run build && cd website && yarn run start",
    "build": "yarn clean && tsc -p packages/plugin/tsconfig.build.json && cp packages/plugin/src/components/styles.css packages/plugin/lib/components/",
    "build:deploy": "yarn build",
    "pack": "yarn build",
    "format": "prettier --write .",
    "lint": "eslint --cache --color --fix --ext .ts,.tsx ./packages/*/{src,tests}",
    "type": "tsc --build",
    "release": "yarn run pack && yarn run check && lerna-release"
  },
  "devDependencies": {
    "@moonrepo/dev": "^2.0.1",
    "@types/marked": "^6.0.0",
    "@types/react": "^18.3.3",
    "eslint": "^8.56.0",
    "eslint-config-moon": "^2.0.14",
    "lerna": "^7.4.2",
    "prettier": "^3.3.3",
    "prettier-config-moon": "^1.1.2",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsconfig-moon": "^1.3.0",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "packages/*",
    "playground/website"
  ],
  "packageManager": "yarn@4.9.2"
}
